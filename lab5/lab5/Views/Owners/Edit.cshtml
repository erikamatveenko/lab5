@model lab5.Models.Owner
@{
    ViewData["Title"] = "Owner";
}

<h2>Редактирование</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Владелец</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OwnerID" />


        <div class="form-group">
            <label asp-for="OwnerName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerBirthDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerBirthDate" class="form-control" />
                <span asp-validation-for="OwnerBirthDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerAddress" class="form-control" />
                <span asp-validation-for="OwnerAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerPassport" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerPassport" class="form-control" />
                <span asp-validation-for="OwnerPassport" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerNumberOfDriverLicense" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerNumberOfDriverLicense" class="form-control" />
                <span asp-validation-for="OwnerNumberOfDriverLicense" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerLicenseDeliveryDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerLicenseDeliveryDate" class="form-control" />
                <span asp-validation-for="OwnerLicenseDeliveryDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerLicenseValidityDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerLicenseValidityDate" class="form-control" />
                <span asp-validation-for="OwnerLicenseValidityDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerCategory" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerCategory" class="form-control" />
                <span asp-validation-for="OwnerCategory" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="OwnerMoreInformation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerMoreInformation" class="form-control" />
                <span asp-validation-for="OwnerMoreInformation" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Owners" class="btn btn-sm btn-primary">Вернуться</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui/ui/i18n/datepicker-ru.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#OwnerBirthDate").datepicker({ dateFormat: "dd/mm/yy" });
            $("#OwnerLicenseDeliveryDate").datepicker({ dateFormat: "dd/mm/yy" });
            $("#OwnerLicenseValidityDate").datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>
}
