@using Microsoft.AspNetCore.Identity
@using lab5.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("admin"))
    {
    <ul class="nav navbar-nav">
        <li><a asp-area="" asp-controller="Users" asp-action="Users" class="navbar-brand">Пользователи</a> </li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Tables
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a asp-area="" asp-controller="Cars" asp-action="Cars">Автомобили</a></li>
                <li><a asp-area="" asp-controller="Brands" asp-action="Brands">Марки автомобилей</a></li>
                <li><a asp-area="" asp-controller="Owners" asp-action="Owners">Владельцы</a></li>
            </ul>
        </li>
    </ul>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти</button>
            </li>
